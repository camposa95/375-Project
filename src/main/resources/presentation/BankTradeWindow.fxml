<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="presentation.popups.BankTradeWindowController">
   <children>
      <Text fx:id="bankTradeWindowTitleText" layoutX="251.0" layoutY="54.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Bank Trade">
         <font>
            <Font size="20.0" />
         </font>
      </Text>
      <Button fx:id="tradeButton" layoutX="228.0" layoutY="331.0" mnemonicParsing="false" onMouseClicked="#tradeButtonPressed" text="Trade" />
      <Button fx:id="cancelButton" layoutX="323.0" layoutY="331.0" mnemonicParsing="false" onMouseClicked="#close" text="Cancel" />
      <Text fx:id="resourceGiveText" layoutX="165.0" layoutY="120.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Select Resource to give:" />
      <Group fx:id="giveGroup" layoutX="220.0" layoutY="151.0">
         <children>
            <RadioButton fx:id="giveLumber" mnemonicParsing="false" text="Lumber" />
            <RadioButton fx:id="giveBrick" layoutY="23.0" mnemonicParsing="false" text="Brick" />
            <RadioButton fx:id="giveGrain" layoutY="68.0" mnemonicParsing="false" text="Grain" />
            <RadioButton fx:id="giveWool" layoutY="46.0" mnemonicParsing="false" text="Wool" />
            <RadioButton fx:id="giveOre" layoutY="90.0" mnemonicParsing="false" text="Ore" />
         </children>
      </Group>
      <Text fx:id="resourceReceiveText" layoutX="318.0" layoutY="120.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Select Resource to receive:" />
      <Group fx:id="receiveGroup" layoutX="318.0" layoutY="151.0">
         <children>
            <RadioButton fx:id="receiveLumber" mnemonicParsing="false" text="Lumber" />
            <RadioButton fx:id="receiveBrick" layoutY="23.0" mnemonicParsing="false" text="Brick" />
            <RadioButton fx:id="receiveGrain" layoutY="68.0" mnemonicParsing="false" text="Grain" />
            <RadioButton fx:id="receiveWool" layoutY="46.0" mnemonicParsing="false" text="Wool" />
            <RadioButton fx:id="receiveOre" layoutY="90.0" mnemonicParsing="false" text="Ore" />
         </children>
      </Group>
      <Text fx:id="tooltip" layoutX="214.0" layoutY="310.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Submit Trade:" />
   </children>
</AnchorPane>
